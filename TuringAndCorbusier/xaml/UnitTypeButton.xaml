<UserControl x:Class="TuringAndCorbusier.xaml.UnitTypeButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TuringAndCorbusier.xaml"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">
    <Grid>

        <Button x:Name="mainButton" Height="50" Margin="0,0,50,0"/>
        <Button x:Name="closeButton" Click="mainButton_Click" Height="50" Width="50" HorizontalAlignment="Right" Margin="0,0,0,0" FontSize="10" FontWeight="ExtraBold" Foreground="Red">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FF1D1D1D" Offset="0"/>
                    <GradientStop Color="Black" Offset="0.5"/>
                    <GradientStop Color="#FF040404" Offset="0.5"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background> X
        </Button>
        <TextBlock x:Name="name" Text="이름" Margin="32,14,404,11" FontSize="15" TextAlignment="Left"/>
        <TextBlock x:Name="minimum" Text="하한" Margin="158,14,310,11" FontSize="15" TextAlignment="Left"/>
        <TextBox x:Name="minimum_Input" Margin="190,15,272,15" TextChanged="minimum_Input_TextChanged"/>
        <TextBlock x:Name="maximum" Text="상한" Margin="250,14,218,11" FontSize="15" TextAlignment="Left"/>
        <TextBox x:Name="maximum_Input" Margin="282,15,180,15" TextChanged="maximum_Input_TextChanged" />
        <TextBlock x:Name="mandatory" Text="필수" Margin="340,14,128,11" FontSize="15" TextAlignment="Left"/>
        <TextBox x:Name="mandatory_Input" Margin="372,15,90,15" TextChanged="mandatory_Input_TextChanged"/>
        <TextBlock x:Name="percentage" Text="비율" Margin="366,13,10,2" FontSize="15" TextAlignment="Left" Visibility="Hidden"/>
        <TextBlock Text="비율" FontSize="15" Margin="180,13,242,12" Visibility="Hidden"></TextBlock>
        <TextBox x:Name="Input" Text="" FontSize="15" Margin="418,14,59,11" TextChanged="Input_TextChanged"/>

    </Grid>
</UserControl>
